# DB
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/DBNAME?schema=public"

# App
NODE_ENV=development
PORT=3004
CORS_ORIGIN=http://localhost:3000

# JWT (must be at least 32 chars, use a secure random string)
JWT_ACCESS_SECRET=your_access_secret_here_32chars_min
JWT_REFRESH_SECRET=your_refresh_secret_here_32chars_min

# OTP pepper (extra secret for hashing OTPs, at least 16 chars random)
OTP_PEPPER=your_random_pepper_here

# Twilio (for sending OTPs)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
