{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "target": "ES2020",
    "module": "CommonJS",               // ✅ best for Node
    "moduleResolution": "node",         // ✅ needed for Prisma + Node
    "types": ["node"],

    // Path Aliases (fixes @/db, @/schemas, etc.)
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    // Other Outputs
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    // Strict Typechecking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Build Performance
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
